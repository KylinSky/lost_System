<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/secback"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
         >

        <TextView
            android:id="@+id/sd21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="寻主信息"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物品名称"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/editText22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:alpha="0.2"
            android:background="@android:drawable/editbox_background_normal"
            android:hint="请输入物品名称" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物品类别"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/editText23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:alpha="0.2"
            android:background="@android:drawable/editbox_background_normal"
            android:ems="10" 
            android:hint="请输入物品类别"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细描述"
            android:textAppearance="?android:attr/textAppearanceLarge"
             android:textSize="15sp" />

        <EditText
            android:id="@+id/editText24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:alpha="0.2"
            android:background="@android:drawable/editbox_background_normal"
            android:ems="10"
            android:hint="物品描述" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拾  获  者"
            android:textAppearance="?android:attr/textAppearanceLarge"
             android:textSize="15sp" />

        <EditText
            android:id="@+id/editText25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:alpha="0.2"
            android:background="@android:drawable/editbox_background_normal"
            android:ems="10"
            android:hint="请输入内容" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发现时间"
            android:textAppearance="?android:attr/textAppearanceLarge" 
             android:textSize="15sp"/>

        <EditText
            android:id="@+id/editText26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:alpha="0.2"
            android:background="@android:drawable/editbox_background_normal"
            android:ems="10" 
            android:hint="请输入内容"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发现地点"
            android:textAppearance="?android:attr/textAppearanceLarge"
             android:textSize="15sp" />

        <EditText
            android:id="@+id/editText27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:alpha="0.2"
            android:background="@android:drawable/editbox_background_normal"
            android:ems="10"
             android:hint="请输入内容" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" >

        <Button
            android:id="@+id/button21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:alpha="0.2"
            android:background="@drawable/btn_background"
            android:text="提交" />

        <Button
            android:id="@+id/libr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight="0.24"
            android:alpha="0.2"
            android:background="@drawable/btn_background"
            android:text="浏览相册" />

        <Button
            android:id="@+id/paizhaosec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:alpha="0.2"
            android:background="@drawable/btn_background"
            android:text="拍照" />

        <Button
            android:id="@+id/button22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:alpha="0.2"
            android:background="@drawable/btn_background"
            android:text="清空" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_gravity="right"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            
            android:layout_weight="0.21"
            />
    </LinearLayout>

</LinearLayout>